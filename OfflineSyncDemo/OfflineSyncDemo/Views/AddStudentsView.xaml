<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OfflineSyncDemo.Views.AddStudentsView"
             Title="Add Students"
             NavigationPage.HasBackButton="True">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Student Name" Text="{Binding Name}"></Entry>
            <Entry Placeholder="Student Age" Keyboard="Numeric" Text="{Binding Age}"></Entry>
            <Button Text="Submit" Command="{Binding AddStudent}"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>